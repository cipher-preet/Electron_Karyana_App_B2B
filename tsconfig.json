{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "release", "electron"]
}
